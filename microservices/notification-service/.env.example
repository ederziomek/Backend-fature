# Notification Service Environment Variables

# Server Configuration
NODE_ENV=development
NOTIFICATION_PORT=3003
NOTIFICATION_HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://postgres:senha123@localhost:5432/fature_notifications

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_NOTIFICATION_DB=3

# JWT Configuration (para validação de tokens de outros serviços)
JWT_SECRET=your-secret-key
JWT_EXPIRES_IN=24h

# SendGrid Configuration (Email)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@fature100x.com
FROM_NAME=Fature 100x
REPLY_TO_EMAIL=support@fature100x.com

# Twilio Configuration (SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890

# Web Push Configuration
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:admin@fature100x.com

# Notification Settings
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY=5000
NOTIFICATION_BATCH_SIZE=100
NOTIFICATION_MAX_QUEUE_SIZE=10000
NOTIFICATION_PROCESSING_INTERVAL=5000

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=1 minute

# Logging
LOG_LEVEL=info

# Health Check
HEALTH_CHECK_INTERVAL=30000

# External Services URLs
AUTH_SERVICE_URL=http://localhost:3001
AFFILIATE_SERVICE_URL=http://localhost:3002
DATA_SERVICE_URL=http://localhost:3004

# Webhook Configuration
WEBHOOK_SECRET=notification-webhook-secret
WEBHOOK_TIMEOUT=10000

# Template Configuration
DEFAULT_LANGUAGE=pt-BR
TEMPLATE_CACHE_TIMEOUT=3600000

