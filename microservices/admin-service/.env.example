# ===============================================
# CONFIGURAÇÃO DE AMBIENTE - ADMIN SERVICE
# ===============================================

# Servidor
PORT=3003
HOST=0.0.0.0
NODE_ENV=development

# Banco de dados
DATABASE_URL=postgresql://user:password@localhost:5432/fature100x

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_SECRET=your-super-secret-jwt-key
JWT_REFRESH_SECRET=your-super-secret-refresh-key
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Segurança
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# Rate Limiting
RATE_LIMIT_GLOBAL_MAX=1000
RATE_LIMIT_ADMIN_MAX=200

# Frontend
FRONTEND_URL=http://localhost:3000
BACKOFFICE_URL=http://localhost:5173

# APIs dos outros microsserviços
AUTH_SERVICE_URL=http://localhost:3001
AFFILIATE_SERVICE_URL=http://localhost:3002
DATA_SERVICE_URL=http://localhost:3004
NOTIFICATION_SERVICE_URL=http://localhost:3005
ANALYTICS_SERVICE_URL=http://localhost:3006

# Uploads
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Email (para notificações administrativas)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=admin@fature100x.com
SMTP_PASS=your-email-password
SMTP_FROM=admin@fature100x.com

# Logs
LOG_LEVEL=info
LOG_FILE=./logs/admin-service.log

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Monitoramento
MONITORING_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# Sistema
SYSTEM_NAME=Fature 100x
SYSTEM_VERSION=4.0
ADMIN_EMAIL=admin@fature100x.com
SUPPORT_EMAIL=suporte@fature100x.com

