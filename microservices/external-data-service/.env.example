# Variáveis de ambiente para External Data Service

# Configurações do serviço
EXTERNAL_DATA_PORT=3006
EXTERNAL_DATA_HOST=0.0.0.0

# URL da base de dados externa
EXTERNAL_DATA_API_URL=https://fature-database-production.up.railway.app

# Redis
REDIS_URL=${{Redis.REDIS_URL}}
CACHE_TTL=300

# Validação CPA
MIN_DEPOSIT_AMOUNT=50.00
MIN_BETS_COUNT=5
VALIDATION_PERIOD_DAYS=30

# Timeouts e Retry
API_TIMEOUT=10000
MAX_RETRIES=3
RETRY_DELAY=1000

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=1 minute

# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Node.js
NODE_ENV=production

